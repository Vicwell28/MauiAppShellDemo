<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiAppShellDemo.Controls.FlyoutFooter"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard">
    <Grid BackgroundColor="Gray" ColumnDefinitions="20*, 80*">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
        </Grid.GestureRecognizers>
        <Image Source="dotnet_bot.png" Margin="10" Grid.Column="0"></Image>
        <Label Text="Exit of app" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontAttributes="Bold" TextColor="White"></Label>
        
    </Grid>
</ContentView>